{
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "js": [
                "contentScript.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "description": "Scrape emails from a webpage with ScraperOne.",
    "icons": {
        "16": "icon@16.png",
        "48": "icon@48.png",
        "128": "icon@128.png"
    },
    "manifest_version": 3,
    "name": "ScraperOne",
    "permissions": [
        "activeTab",
        "storage",
        "scripting"
    ],
    "version": "0.0.5"
}